<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Login.LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:contentPadding="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:text="Iniciar Sesi칩n"
                android:textSize="25dp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/black"
                android:text="Email:"
                android:textSize="20dp"
                android:textStyle="normal" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:startIconDrawable="@drawable/baseline_email_24"
                >
                <EditText
                    android:id="@+id/SesionEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:hint="correo@correo.com"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/open_sans_light"
                    android:textStyle="normal"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/black"
                android:text="Password:"
                android:textSize="20dp"
                android:textStyle="normal" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@drawable/baseline_lock_24"
                >
                <EditText
                    android:id="@+id/SesionPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:hint="Contrase침a"
                    android:fontFamily="@font/open_sans_light"
                    android:textStyle="normal"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/TvCamContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:layout_gravity="left|center_horizontal"
                android:text="Olvide mi contrase침a"
                android:textColor="@color/black"
                android:onClick="CambiarContrase침a"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textSize="15dp" />
            <Button
                android:id="@+id/BtnIngresarUsua"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Ingresar"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                />
            <!--Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Registrarce"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                /-->
            <TextView
                android:id="@+id/TvRegistrarce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:layout_gravity="right|center_horizontal"
                android:text="Registrarce"
                android:onClick="Registrarce"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="18dp" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>